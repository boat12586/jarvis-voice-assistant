{
  "name": "@jarvis/react-native-sdk",
  "version": "2.0.0",
  "description": "Jarvis Voice Assistant SDK for React Native",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf lib"
  },
  "keywords": [
    "jarvis",
    "voice",
    "assistant",
    "react-native",
    "ai",
    "speech",
    "tts",
    "stt"
  ],
  "author": "Jarvis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jarvis/react-native-sdk.git"
  },
  "homepage": "https://jarvis.com",
  "bugs": {
    "url": "https://github.com/jarvis/react-native-sdk/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.0",
    "@react-native-community/netinfo": "^9.4.0",
    "react-native-audio-recorder-player": "^3.5.0",
    "react-native-permissions": "^3.8.0",
    "react-native-sound": "^0.11.2",
    "react-native-get-random-values": "^1.9.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}